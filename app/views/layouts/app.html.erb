<!DOCTYPE html>
<html>
  <head>
    <title>Pluck - 3D Model Search</title>
    <%= favicon_link_tag asset_path('favicon.ico') %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag     'application' %>
    
    <meta name="viewport" content="width=800">
    
    <meta name="description" content="3D model files to help you start 3D printing">
    
    <script>
      window.currentEnv = <%= (current_env && raw(current_env.to_json)) || {"domains": {"thingiverse": "https://thingiverse.com", "layerkeep": "https://layerkeep.com"}} %>
    </script>
    
  </head>

  <body>
    <main>
      <nav class="ui top fixed secondary small menu">
        <div class="header item">
          <h1>Pluck</h1>
        </div>

        <div class="header item" style="font-weight: normal; padding-top: 15px; padding-left: 0">
          <p style="color: rgba(0, 0, 0, 0.8)"><i>Find your next 3D print</i></p>
        </div>

        <div class="item"></div>

        <div class="item search" style="flex: 1">
          <div class="ui large icon input">
            <input type="text" placeholder="Search">
            <i class="search icon"></i>
          </div>
        </div>

        <div class="item"></div>

        <div class="right menu">
          <div class="item"></div>

          <div class="item">
            <a href="https://layerkeep.com" target="_blank">
              <h3>LayerKeep &rarr;</h3>
            </a>
          </div>
        </div>
      </nav>

      <section id="content" class="ui container">
        <%= yield %>
      </section>
    </main>
  </body>
</html>
